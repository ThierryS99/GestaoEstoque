@model ProdutoModel
@{
    ViewData["Title"] = "Cadastro de Produto";
}

<div class="text-left">
    <h1 class="display-4">CADASTRO DE PRODUTO</h1>
    <p></p>
</div>

<br />

<form asp-controller="Cadastro" asp-action="CadastroProdutoView" method="post">

    <div class="form-group">
        <label for="Código do Produto">Código do Produto</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Digite o Código do Produto.">
    </div>

    <br />

    <div class="form-group">
        <label for="Descrição">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a Descricao.">
    </div>

    <br />

    <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="text" asp-for="Quantidade" class="form-control" placeholder="Digite a Quantidade.">
    </div>

    <br />

    <div class="form-group">
        <label for="Preco">Preço Unitário</label>
        <input type="text" asp-for="PrecoUnit" class="form-control" placeholder="Digite o Preco Unitário.">
    </div>

    <br />

    <div class="form-group">
        <label for="Locação">Locação no Estoque</label>
        <input type="text" asp-for="Locacao" class="form-control" placeholder="Digite a Locação.">
    </div>

    <br />

    <button type="submit" class="btn btn-secondary">ATUALIZAR</button>
    <button type="submit" class="btn btn-danger">EXCLUIR</button>
</form>
